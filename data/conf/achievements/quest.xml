<?xml version="1.0" encoding="UTF-8"?>
<achievements xmlns="stendhal" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="stendhal ../achievements.xsd ">
	
	<achievement name="elf princess">
	  	<type class="achievements" subclass="quest" tileid="-1"/>
		<implementation class-name="games.stendhal.server.entity.core.rp.achievement.factory.QuestAchievementFactory"/>
		<attributes>
			<identifier value="quest.special.elf_princess.0025"/>
			<title value="Faiumoni's Casanova"/>
			<description value="Finish elf princess quest 25 times"/>
			<score value="2"/>
			<active value="true"/>
			<condition value="new QuestStateGreaterThanCondition('elf_princess', 2, 24)"/>
		</attributes>
	</achievement>
	
	
	<achievement name="kill monks">
	  	<type class="achievements" subclass="quest" tileid="-1"/>
		<implementation class-name="games.stendhal.server.entity.core.rp.achievement.factory.QuestAchievementFactory"/>
		<attributes>
			<identifier value="quest.special.kill_monks.0025"/>
			<title value="Heretic"/>
			<description value="Finish Kill Monks quest 25 times"/>
			<score value="5"/>
			<active value="true"/>
			<condition value="new QuestStateGreaterThanCondition('kill_monks', 2, 24)"/>
		</attributes>
	</achievement>
	
	<achievement name="Maze Pathfinder">
	  	<type class="achievements" subclass="quest" tileid="-1"/>
		<implementation class-name="games.stendhal.server.entity.core.rp.achievement.factory.QuestAchievementFactory"/>
		<attributes>
			<identifier value="quest.special.maze"/>
			<title value="Pathfinder"/>
			<description value="Finish the maze"/>
			<score value="1"/>
			<active value="true"/>
			<condition value="new QuestStateGreaterThanCondition('maze', 2, 0)"/>
		</attributes>
	</achievement>
	
	<achievement name="Deathmatch">
	  	<type class="achievements" subclass="quest" tileid="-1"/>
		<implementation class-name="games.stendhal.server.entity.core.rp.achievement.factory.QuestAchievementFactory"/>
		<attributes>
			<identifier value="quest.deathmatch"/>
			<title value="Deathmatch Hero"/>
			<description value="Earn 100,000 points in deathmatch"/>
			<score value="2"/>
			<active value="true"/>
			<condition value="new QuestStateGreaterThanCondition('deathmatch_score', 0, 100000)"/>
		</attributes>
	</achievement>
	
	<achievement name="Semos City Quests">
	  	<type class="achievements" subclass="quest" tileid="-1"/>
