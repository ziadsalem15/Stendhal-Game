			<score value = "2" />
			<active value = "true" />
			<condition value = "new PlayerHasKilledNumberOfCreaturesCondition(10, 'rat', 'caverat', 'razorrat', 'venomrat', 'zombie rat', 'giantrat', 'ratman', 'ratwoman', 'archrat')" />
