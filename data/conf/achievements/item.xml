	<achievement name="pocket_money">
		<type class="achievements" subclass="item" tileid="-1"/>
		<implementation class-name="games.stendhal.server.ItemAchievementFactory"/>
		<attributes>
			<identifier value = "item.money.100" />
			<title value = "First pocket money" />
			<description value = "Loot 100 money from creatures" />
			<score value = "1" />
			<active value = "true" />
			<condition value = "new PlayerLootedNumberOfItemsCondition(100, 'money')" />
		</attributes>
	</achievement>
	
		
